{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Khai-Bhin/3179/main/DataVis2/AQItransformed.csv"
  },
  "vconcat": [
    {
      "width": 800,
      "height": 450,
      "title": "World Air Quality Index by City and Coordinates",
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Khai-Bhin/3179/main/DataVis2/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Khai-Bhin/3179/main/DataVis2/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Khai-Bhin/3179/main/DataVis2/AQItransformed.csv"
          },
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "transform": [{"filter": {"param": "aqifilt"}}],
          "encoding": {
            "longitude": {"field": "lng", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"},
            "size": {
              "field": "count",
              "type": "quantitative",
              "title": "No. of measurements",
              "scale": {"domain": [0, 17], "range": [10, 300]},
              "bin": {"binned": true, "step": 4}
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "City", "type": "nominal", "title": "City"},
              {"field": "AQIValue", "type": "quantitative", "title": "AQIValue"}
            ],
            "color": {
              "field": "AQIValue",
              "type": "quantitative",
              "title": "Air Quality Index",
              "scale": {"scheme": "reds"},
              "bin": true
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "Africa",
            "x": 430,
            "y": 170,
            "fontSize": 17
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "North America",
            "x": 200,
            "y": 100,
            "fontSize": 17
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "South America",
            "x": 250,
            "y": 230,
            "fontSize": 17
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "Europe",
            "x": 550,
            "y": 60,
            "fontSize": 17
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "Asia",
            "x": 590,
            "y": 120,
            "fontSize": 17
          }
        },
        {
          "mark": {
            "type": "text",
            "text": "Oceania",
            "x": 680,
            "y": 300,
            "fontSize": 17
          }
        }
      ]
    },
    {
      "width": 890,
      "height": 60,
      "mark": "bar",
      "title": "Use this line chart to filter out the data based on AQI Value",
      "params": [
        {"name": "aqifilt", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "AQIValue",
          "type": "quantitative",
          "scale": {"domain": [1, 500]},
          "axis": {"title": ""}
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "axis": {"tickCount": 4, "grid": false},
          "scale": {"domain": [1, 450]},
          "title": " Total count"
        },
        "color": {
          "field": "AQIValue",
          "type": "quantitative",
          "scale": {"scheme": "reds"},
          "bin": false,
          "legend": null
        }
      }
    },
    {
      "hconcat": [
        {
          "width": 253,
          "description": "Scatterplot 1",
          "mark": "point",
          "transform": [{"filter": {"param": "aqifilt"}}],
          "encoding": {
            "tooltip": {"field": "Country"},
            "x": {"field": "AQIValue", "type": "quantitative"},
            "y": {"field": "COAQIValue", "type": "quantitative"},
            "color": {
              "field": "AQIValue",
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "bin": false,
              "legend": null
            }
          }
        },
        {
          "width": 253,
          "description": "Scatterplot 2",
          "mark": "point",
          "transform": [{"filter": {"param": "aqifilt"}}],
          "encoding": {
            "tooltip": {"field": "Country"},
            "x": {"field": "AQIValue", "type": "quantitative"},
            "y": {"field": "OzoneAQIValue", "type": "quantitative"},
            "color": {
              "field": "AQIValue",
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "bin": false
            }
          }
        },
        {
          "width": 253,
          "description": "Scatterplot 3",
          "mark": "point",
          "transform": [{"filter": {"param": "aqifilt"}}],
          "encoding": {
            "tooltip": {"field": "Country"},
            "x": {"field": "AQIValue", "type": "quantitative"},
            "y": {"field": "NO2AQIValue", "type": "quantitative"},
            "color": {
              "field": "AQIValue",
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "bin": false
            }
          }
        }
      ]
    }
    
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
}